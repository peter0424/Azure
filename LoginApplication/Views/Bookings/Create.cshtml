<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Booking</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Passenger.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Passenger.Name" class="form-control" />
                <span asp-validation-for="Passenger.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Passenger.Gender" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Passenger.Gender" class="form-control" />
                <span asp-validation-for="Passenger.Gender" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Passenger.Age" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Passenger.Age" class="form-control" />
                <span asp-validation-for="Passenger.Age" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Passenger.Phone" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Passenger.Phone" class="form-control" />
                <span asp-validation-for="Passenger.Phone" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="Flight.FlightID" name="flightID" class="form-control" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Book" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

